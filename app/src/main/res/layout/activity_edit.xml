<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <uiapp.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="文本编辑" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="5dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/bind_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bind" />

        <EditText
            android:id="@+id/et_letter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/bind_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bind" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/bind_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bind" />

        <EditText
            android:id="@+id/et_mark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:maxLines="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <uiapp.ui.edit.FastKeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/keyboard_blue"
        android:keyTextColor="@color/blue"
        android:keyTextSize="20sp"
        android:shadowColor="@color/white"
        android:shadowRadius="0" />
</LinearLayout>
