<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="uiapp.ui.databinding.DataBindingActivity.EventHandler" />

        <variable
            name="model"
            type="uiapp.ui.databinding.BindingViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <uiapp.widget.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/deep_purple_100"
            android:orientation="vertical"
            android:padding="20dp"
            app:dividerDrawable="@drawable/divider_space_20dp"
            app:flexWrap="wrap"
            app:showDivider="middle">

            <Button
                android:id="@+id/execFunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="execFunction" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{handler::openDialog}"
                android:text="openPage" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/amber_100"
            android:padding="16dp"
            app:dividerDrawable="@drawable/divider_space_20dp"
            app:flexWrap="wrap"
            app:showDivider="middle">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:text="@{model.datatime}"
                app:drawableTint="?colorPrimary"
                app:drawableLeftCompat="@drawable/ic_home" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                imageUrl="@{model.imgUrl}" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                imageUrl="@{model.imgUrl}" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</layout>