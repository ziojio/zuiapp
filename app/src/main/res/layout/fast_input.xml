<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100">

        <ImageView
            android:id="@+id/input_close"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/input_down" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/input_1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="3"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/input_4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_5"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="6"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/input_7"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_8"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_9"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="9"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/input_delete"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_action_bg"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/input_backspace" />

        <TextView
            android:id="@+id/input_0"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_char_bg"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_done"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_action_bg"
            android:gravity="center"
            android:text="完成"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>