<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:elevation="3dp"
    android:gravity="center"
    android:padding="10dp">

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/input_1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_5"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="6"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_7"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_8"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_9"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="9"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_delete"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_0"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_done"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="ok"
            android:textSize="20sp" />
    </GridLayout>
</LinearLayout>